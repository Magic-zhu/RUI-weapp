<!--components/BetterImage/BetterImage.wxml-->
<view class='better_image' style="width:{{width}};height:{{defaultHeight}}">
  <image 
        src="{{src}}" 
        mode="{{mode}}" 
        class='better_image_body' 
        style='opacity:{{ready?1:0}};height:{{height}}' 
        bindload="loadImage"
    />
  <view class='better_image_bg' style="opacity:{{ready?0:1}}">
        <view class='loading'>
            <view class='loading-view loading1'></view>
            <view class='loading-view loading2'></view>
            <view class='loading-view loading3'></view>
        </view>
  </view>
</view>